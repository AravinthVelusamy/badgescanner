<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnCount="1" >

    <ImageView
            android:id="@+id/imageView1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:src="@drawable/ic_launcher" />

    <Space
            android:layout_width="1dp"
            android:layout_height="124dp"
            android:layout_column="0"
            android:layout_row="0" />

    <Space
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" />

    <TextView
            android:id="@+id/textView1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="Scan Badge"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4" />

    <TextView
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="5"
            android:text="Hint: You can scan badges even when the Badge Reader app isn't running." android:paddingLeft="20dp" android:paddingRight="20dp" android:gravity="center_vertical|center_horizontal"/>

    <Space
            android:layout_width="1dp"
            android:layout_height="242dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="5" />

</GridLayout>
